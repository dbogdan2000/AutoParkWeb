@model IEnumerable<Order>

@{
    Layout = "~/Views/DefaultLayout.cshtml";
}

@{
    ViewData["Title"] = "Orders";
}
<h2>@ViewData["Title"]</h2>
<br/>
<p>
    <a asp-controller="Order" asp-action="Create">
        <button type="submit" class="btn btn-success">
            Create order
        </button>
    </a>
</p>
<br/>
<p>
    <a asp-controller="Home" asp-action="Index">
        <button type="submit" class="btn btn-primary">
            Back to main page
        </button>
    </a>
</p>
<br/>
<table class="table">
    <br/>
    <tr>
        <th>Id</th>
        <th>Model Name</th>
        <th>Registration Number</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Vehicle.Model_Name</td>
            <td>@item.Vehicle.Registration_Number</td>
            <td>
                <form method="get" asp-controller="OrderPart" asp-action="Create" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-success">
                        Add parts
                    </button>
                </form>
            </td>
            <td>
                 <td>
                     <form method="get" asp-controller="OrderPart" asp-action="GetInfo" asp-route-id="@item.Id">
                         <button type="submit" class="btn btn-warning">Info</button>
                     </form>
                 </td>
            <td/>
        </tr>
    }
</table>
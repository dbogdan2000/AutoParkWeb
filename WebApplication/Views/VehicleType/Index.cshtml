@model IEnumerable<AutoPark.DAL.Entities.VehicleType>

@{
    Layout = "~/Views/DefaultLayout.cshtml";
}

@{
    ViewData["Title"] = "Vehicles Types";
}
<h2>@ViewData["Title"]</h2>
<br/>
<p>
     <a asp-controller="VehicleType" asp-action="Create">
         <button type="submit" class="btn btn-success">
             Create type
         </button>
     </a>
</p>
<br/>
<table class="table">
    <br/>
    <tr>
        <th>Id</th>
        <th>Type</th>
        <th>Tax Coefficient</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                @item.Type_Name
            </td>
            <td>@item.Tax_Coefficient</td>
            <td>
                <form method="post" asp-controller="VehicleType" asp-action="Delete" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
            <td>
                <form method="post" asp-controller="VehicleType" asp-action="Edit" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form> 
            <td/>
        </tr>
    }
</table>
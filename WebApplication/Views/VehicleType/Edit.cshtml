@model VehicleType

@{
    Layout = "~/Views/DefaultLayout.cshtml";
}

@{
    ViewData["Title"] = "Edit Vehicle Type";
}
<h2>@ViewData["Title"]</h2>
 
<form asp-action="EditConfirm" asp-controller="VehicleType">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Type_Name">Type Name:</label>
            <input type="text" asp-for="Type_Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Tax_Coefficient">Tax Coefficient:</label>
            <input asp-for="Tax_Coefficient" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</form>
 
<div>
    <a asp-controller="VehicleType" asp-action="Index">Back to List</a>
</div>
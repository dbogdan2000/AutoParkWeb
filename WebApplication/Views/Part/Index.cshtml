@model IEnumerable<Part>

@{
    Layout = "~/Views/DefaultLayout.cshtml";
}

@{
    ViewData["Title"] = "Parts";
}
<h2>@ViewData["Title"]</h2>
<br/>
<p>
    <a asp-controller="Part" asp-action="Create">
        <button type="submit" class="btn btn-success">
            Create part
        </button>
    </a>
</p>
<br/>
<p>
    <a asp-controller="Home" asp-action="Index">
        <button type="submit" class="btn btn-primary">
            Back to main page
        </button>
    </a>
</p>
<br/>
<table class="table">
    <br/>
    <tr>
        <th>Id</th>
        <th>Part Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Part_Name</td>
            <td>
                <form method="post" asp-controller="Part" asp-action="Delete" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
            <td>
            <form method="get" asp-controller="Part" asp-action="Edit" asp-route-id="@item.Id">
                <button type="submit" class="btn btn-primary">Edit</button>
            </form> 
            <td/>
        </tr>
    }
</table>